#:kivy 1.10.0

<GamePage>:
	name: 'game_page'
	GamePageLayout:
		pos: self.pos

<GameTitle@FloatLayout>:
	text: 'Suka'
	Label:
		text: root.text
		font_size: 55
		size_hint_x: None
		size: self.texture_size
		pos_hint: {'left': 1, 'center_y': 0.5}

<InfoLabel@Label>:
	size_hint_y: .1
	text: ''
	font_size: 15
	size_hint_x: None
	size: self.texture_size
	pos_hint: {'left': 1, 'center_y': 0.5}

<GameInfo@BoxLayout>:
	orientation: 'horizontal'
	canvas.before:
		Color:
			rgba: 0.3, 0.6, 0.9, 1
		Rectangle:
			size: self.size
	BoxLayout:
		size_hint_y: .25
		pos_hint: {'top': 1}
		orientation: 'vertical'
		InfoLabel:
			text: 'Жанры'
		InfoLabel:
			text: 'Платформы'
		InfoLabel:
			text: 'Разработчик'
		InfoLabel:
			text: 'Издатель'
	Label:
		text: 'Description'

<GamePageLayout@BoxLayout>:
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: 0.9, 0.5, 0.1, 1
		Rectangle:
			size: self.size
	MenuBar:
		name: 'test'
		id: menu_bar
		size_hint_y: .1
	AdminPanel:
		height: 40 if menu_bar.admin else 0
		opacity: 1 if menu_bar.admin else 0
	GameTitle:
		size_hint_y: .1
		text: 'WTF'
	GameInfo:


<AdminPanel>:
	canvas.before:
		Color:
			rgba: .6, .2, .3, 1
		Rectangle:
			size: self.size
	size_hint_y: None
	height: 0
	opacity: 0
	Button:
		size_hint_x: None
		text: 'add game'
		#on_press: root.parent.go_to_new_game_page()
